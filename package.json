{
  "scripts": {
    "start": "npx serve docs",
    "start:van": "npx esbuild --bundle --format=iife src/app-van.ts --outfile=docs/js/app-van.js --servedir=docs --watch",
    "start:ce": "npx esbuild --bundle --format=iife src/app.ts --outfile=docs/js/app.js --servedir=docs --watch",
    "build": "npx esbuild  src/app.ts src/app-van.ts --bundle --format=esm --outdir=docs/js/ --minify"
  },
  "dependencies": {
    "serve": "^14.2.1",
    "vanjs-core": "^1.5.0",
    "vanjs-ext": "^0.3.0"
  },
  "devDependencies": {
    "esbuild": "^0.19.12"
  }
}
